<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10 ml-auto col-10">
      <h1 class="text-center">Signup!</h1>

      <%= form_for :user, url: '/users', class: 'form-signup' do |f| %>

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control', style: 'width: 100%;' %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control', style: 'width: 100%;' %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control', style: 'width: 100%;' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control', style: 'width: 100%;' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control', style: 'width: 100%;' %>
        </div>

        <%= f.submit "Submit", class: 'btn btn-primary btn-block' %>

      <% end %>
    </div>
  </div>
</div>
